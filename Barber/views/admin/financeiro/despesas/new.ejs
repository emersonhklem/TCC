<%- include ('../../../partials/header.ejs') %>
<%- include ('../../../partials/navbar.ejs') %>

<br>
<br>
<div class="container">
    <hr>
    <div class="card mt-5">
        <div class="card-header"> 
           <h2>Inserir Despesas </h2> 
        </div>
        <div class="card-body">
            <form action="/despesas/save" method="POST">
                <div class="form-row">
                    <div class="form-group col-md-6">
                    <label> Descrição da despesa:</label>
                <input class="form-control " name="descricao" type="text" placeholder="Exemplo: barba " required>
                <% if(errorDescricao != ""){ %><div class="alert alert-danger" role="alert">  <%= errorDescricao%>  </div>  <%} %>
                    </div>
                    <div class="form-group col-md-3">
                <label> Tipo:</label>
                <input class="form-control " name="tipo" type="text" placeholder="exemplo: Produtos " required>
                <% if(errorTipo != ""){ %><div class="alert alert-danger" role="alert">  <%= errorTipo%>  </div>  <%} %>
                 </div>
                 
                 </div>
                 <div class="form-row">
                    <div class="form-group col-md-3">
                        <label> Dia:</label>
                        <input class="form-control" name="dia" type="text" placeholder="Dia do serviço " required>
                        <% if(errorDia != ""){ %><div class="alert alert-danger" role="alert">  <%= errorDia%>  </div>  <%} %>
                        </div>
                        <div class="form-group col-md-3">
                        <label> Mês:</label>
                        <input class="form-control" name="mes" type="text" placeholder="Mês do serviço " required>
                        <% if(errorMes != ""){ %><div class="alert alert-danger" role="alert">  <%= errorMes%>  </div>  <%} %>
                    </div>
                 
                    <div class="form-group col-md-4">
                    <label> Valor: (Digite apenas números e ponto)</label>
                    <input class="form-control" name="valor" type="text" placeholder="0.00 " required >
                    <% if(errorValor != ""){ %><div class="alert alert-danger" role="alert">  <%= errorValor%>  </div>  <%} %>
                    </div>
                 </div>

                

                
                
               
            <button class="btn btn-success btn-block" type="submit">Inserir</button>
        </form>

        
        </div>

    </div>
    <a style="position:fixed; top: 8%; left: 93%;" id="menu" class="navbar-brand " href="/usuario/menu">
        <img src="/img/menu.png" alt="logo" width=75 height=80>
       </a>    
</div>


